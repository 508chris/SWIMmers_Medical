  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="./css/style.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <li class="navbar-brand" style="color: #386cec" href="#">SWIMmers Medical</li>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="navbar-nav mr-auto">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/patients">Patients</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/doctors">Doctors</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/appointments">Appointments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/medications">Medications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/prescriptions">Prescriptions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/appts_has_scripts">Appointment Prescriptions</a>
        </li>
      </ul>
    </div>
  </nav>
  <br>

  <div class="container">

    <form id="edit-script-form" , method="POST" , action="edit-script-form">
      <h1>Update Prescription</h1>
      <h4>Please update the prescription details below.</h4>
      <br>

      <div class="input-group mb-3">
        <div class="input-group-prepend col-xs-2">
          <span class="input-group-text" id="specialty">ID</span>
        </div>
        {{#each data}}
        <input name='input-script-id' type="text" class="form-control" value="{{this.script_id}}" readonly>
        {{/each}}
      </div>

      Medication
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01"><svg xmlns="http://www.w3.org/2000/svg" width="16"
              height="16" fill="currentColor" class="bi bi-capsule" viewBox="0 0 16 16">
              <path fill-rule="evenodd"
                d="M1.828 8.9 8.9 1.827a4 4 0 1 1 5.657 5.657l-7.07 7.071A4 4 0 1 1 1.827 8.9Zm9.128.771 2.893-2.893a3 3 0 1 0-4.243-4.242L6.713 5.429l4.243 4.242Z" />
            </svg></label>
        </div>
        <select name='input-med-id' class="custom-select" id="inputGroupSelect01">
          {{#each data}}
          <option value="{{this.medication_id}}" selected>{{this.medication_name}}</option>
          {{/each}}
          {{#each medications}}
          <option value="{{this.medication_id}}">{{this.medication_name}}</option>
          {{/each}}

        </select>
      </div>
      Dosage
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="dosage"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
              fill="currentColor" class="bi bi-file-earmark-text" viewBox="0 0 16 16">
              <path
                d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
              <path
                d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
            </svg></span>
        </div>
        {{#each data}}
        <input name="input-dosage" type="text" class="form-control" value="{{this.dosage}}" aria-label="dosage"
          aria-describedby="basic-addon1">
      </div>
      Instructions
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="dosage"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
              fill="currentColor" class="bi bi-file-earmark-medical" viewBox="0 0 16 16">
              <path
                d="M7.5 5.5a.5.5 0 0 0-1 0v.634l-.549-.317a.5.5 0 1 0-.5.866L6 7l-.549.317a.5.5 0 1 0 .5.866l.549-.317V8.5a.5.5 0 1 0 1 0v-.634l.549.317a.5.5 0 1 0 .5-.866L8 7l.549-.317a.5.5 0 1 0-.5-.866l-.549.317V5.5zm-2 4.5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 2a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z" />
              <path
                d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
            </svg></span>
        </div>
        <input name="input-instructions" type="text" class="form-control" value="{{this.instructions}}" aria-label="DOB"
          aria-describedby="basic-addon1">
      </div>
      <br>
      <div class="row">
        <div class="col text-right d-grid gap-2 d-md-block">
          <button class="btn btn-primary me-md-2" type="submit"> Update Prescription</button>
          <button class="btn btn-secondary" type="button" onclick="location.href='/prescriptions'"> Return</button>
          {{/each}}
    </form>
  </div>
  <!-- /.container -->
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
